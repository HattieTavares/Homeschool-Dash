<%- include('partials/header.ejs') %>

<section class="blueBanner">
    <h2>Contact Me</h2>
</section>

<section class="w-full max-w-2xl px-6 py-4 mx-auto shadow-lg">

    <p class="mt-3 text-center">
        Questions, comments, concerns? Get in touch:
    </p>

    <form action="/contact" method="POST" class="mt-6">
        <div class="items-center -mx-2 md:flex">
            <div class="w-full mx-2">
                <label class="block mb-2 text-sm font-medium">Name</label>

                <input class="block w-full px-4 py-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-opacity-40" type="text" name="yourname" required>
            </div>

            <div class="w-full mx-2 mt-4 md:mt-0">
                <label class="block mb-2 text-sm font-medium">E-mail</label>

                <input class="block w-full px-4 py-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-opacity-40" type="email" name="youremail" required>
            </div>
        </div>

        <div class="w-full mt-4">
            <label class="block mb-2 text-sm font-medium">Message</label>

            <textarea class="block w-full h-40 px-4 py-2 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40" name="yourmessage" required></textarea>
        </div>

        <div class="flex justify-center mt-6">
            <button class="greenBtn" type="submit" value="send">Send</button>
        </div>
    </form>
</section>

<%- include('partials/footer.ejs') %>