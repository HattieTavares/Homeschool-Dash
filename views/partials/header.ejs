<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300;400;500;600&family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/68de1d0260.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style.css">
    <script src="https://kit.fontawesome.com/68de1d0260.js" crossorigin="anonymous"></script>
    <title>Homeschool Dash</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon-32x32.png" />
</head>
<body class="basics">

    <header class="header">
        <section class="flex shrink-0 items-center">
            <a href="/"><img src="/images/HDLogo.png" class="logo" alt="homeschool dash logo"></a>

            <a href="/"><h1>Homeschool Dash</h1></a>
        </section>
        
        <nav>

            <div class="flex items-center justify-center">
                <div class="cursor-pointer">
                    <span onclick="toggleSlideover()" class="fa-solid fa-bars text-3xl ml-2 mr-2"></span>
                </div>
                <div id="slideover-container" class="z-10 w-full h-full fixed inset-0 invisible">
                  <div onclick="toggleSlideover()" id="slideover-bg" class="z-20 w-full h-full duration-500 ease-out transition-all inset-0 absolute bg-brandBlue opacity-0"></div>
                  <div onclick="toggleSlideover()" id="slideover" class="z-30 w-64 lg:w-80 bg-brandBlue p-5 h-full absolute right-0 duration-300 ease-out transition-all translate-x-full">
                      <div class="absolute cursor-pointer text-neutral top-0 w-8 h-8 flex items-center justify-center right-0 mt-5 mr-5">
                          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                      </div>
                      <section>
                        <a href="/about" class="navLink">About</a>
                        <a href="/contact" class="navLink">Contact</a>
                        <a href="/resources" class="navLink">Resources</a>
                        <% if(typeof user === 'undefined') { %>
                            <a href="/login" class="yellowBtn">Log In</a>
                        <% } else { %>
                            <% if(page === "dashboard") { %>
                                <a href="/logout" class="redBtn">Log Out</a>
                            <% } else { %>
                                <a href="/dashboard" class="navLink">Dashboard</a>
                                <a href="/logout" class="redBtn">Log Out</a>
                            <% } %>
                        <% } %>
                    </section>
                  </div>
                </div>
              </div>

        </nav>
    </header>